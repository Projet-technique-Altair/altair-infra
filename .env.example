####################################
# Environment
####################################

# dev | staging | prod
APP_ENV=dev

# Optional: isolate Docker resources (volumes/network) per project
# COMPOSE_PROJECT_NAME=altair


####################################
# Keycloak â€” Authentication (DEV ONLY)
####################################

# Bootstrap admin account (development only)
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=change-me

# Public issuer URL (used by gateway running on host)
KEYCLOAK_ISSUER_PUBLIC=http://localhost:8080/realms/altair

# Internal issuer URL (used by containers inside Docker network)
KEYCLOAK_ISSUER_INTERNAL=http://keycloak:8080/realms/altair

# Keycloak host port (change if collision)
KEYCLOAK_PORT=8080

# Keycloak metrics
KEYCLOAK_MGMT_PORT=9000


####################################
# Gateway
####################################

# Base URL used by frontend to call the gateway
GATEWAY_BASE_URL=http://localhost:3000


####################################
# PostgreSQL (DEV ONLY)
####################################

# Shared dev credentials (override if needed)
# Do not reuse in production.
POSTGRES_USER=altair
POSTGRES_PASSWORD=altair

# Host ports (change if collisions)
PG_USERS_PORT=5433
PG_GROUPS_PORT=5434
PG_STARPATHS_PORT=5435
PG_SESSIONS_PORT=5436
PG_LABS_PORT=5437


####################################
# Grafana (DEV ONLY)
####################################

GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me
GRAFANA_PORT=4000

####################################
# Observability (DEV ONLY)
####################################

PROMETHEUS_PORT=9090
LOKI_PORT=3100


####################################
# Notes
####################################

# Keycloak uses embedded dev database (KC_DB=dev-file)
# No external database required in development
